<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table
 
 class= "table table-striped">


  <thead>
    <tr>
      <th>Author</th>
      <th>Comment entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.author %></td>
        <td><%= comment.comment_entry %></td>
        <td><%= link_to 'Show', comment, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @posts %>

<%= link_to 'New Comment', new_comment_path, class: "btn btn-success" %>
